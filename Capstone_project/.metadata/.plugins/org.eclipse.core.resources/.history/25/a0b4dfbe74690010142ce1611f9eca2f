package assessment5;

// 1. Student with Grade Validation & Configuration
public class Student {
    private String name;
    private int rollNumber;
    private int marks;

    public Student(String name, int rollNumber, int marks) {
        this.name = name;
        this.rollNumber = rollNumber;

        // Enforce marks to be between 0 and 100
        if (marks >= 0 && marks <= 100) {
            this.marks = marks;
        } else {
            this.marks = 0; // Invalid values reset to 0
        }
    }

    // Getter methods
    public String getName() {
        return name;
    }

    public int getRollNumber() {
        return rollNumber;
    }

    public int getMarks() {
        return marks;
    }

    // Method to print all fields
    public void displayDetails() {
        System.out.println("Name: " + name + ", Roll Number: " + rollNumber + ", Marks: " + marks);
    }

    // Main method to test the class
    public static void main(String[] args) {
        Student s1 = new Student("Alice", 101, 85);
        Student s2 = new Student("Bob", 102, 120);  // Invalid marks, should default to 0

        s1.displayDetails();  // Output: Name: Alice, Roll Number: 101, Marks: 85
        s2.displayDetails();  // Output: Name: Bob, Roll Number: 102, Marks: 0
    }
}
