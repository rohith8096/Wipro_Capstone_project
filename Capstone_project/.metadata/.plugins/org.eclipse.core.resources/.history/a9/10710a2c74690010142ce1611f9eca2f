package assessment5;

//1. Student with Grade Validation & Configuration
class Student {
 private String name;
 private int rollNumber;
 private int marks;

 public Student(String name, int rollNumber, int marks) {
     this.name = name;
     this.rollNumber = rollNumber;
     if (marks >= 0 && marks <= 100) { // Enforce marks to be between 0 and 100
         this.marks = marks;
     } else {
         this.marks = 0; // Invalid values reset to 0
     }
 }

 // Getter methods
 public String getName() {
     return name;
 }

 public int getRollNumber() {
     return rollNumber;
 }

 public int getMarks() {
     return marks;
 }

 // No setter for marks to make it immutable after object creation

 public void displayDetails() { // Method to print all fields
     System.out.println("Name: " + name + ", Roll Number: " + rollNumber + ", Marks: " + marks);
 }
}
