package assessment5;

//2. Rectangle Enforced Positive Dimensions
class Rectangle {
 private double width;
 private double height;

 public Rectangle(double width, double height) {
     setWidth(width);
     setHeight(height);
 }

 public double getWidth() {
     return width;
 }

 public void setWidth(double width) {
     this.width = (width > 0) ? width : 1.0; // Correct non-positive values
 }

 public double getHeight() {
     return height;
 }

 public void setHeight(double height) {
     this.height = (height > 0) ? height : 1.0; // Correct non-positive values
 }

 public double getArea() { // Derived calculation
     return width * height;
 }

 public double getPerimeter() { // Derived calculation
     return 2 * (width + height);
 }

 public void displayDetails() { // Method to display details
     System.out.println("Width: " + width + ", Height: " + height + ", Area: " + getArea() + ", Perimeter: " + getPerimeter());
 }
}
